<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="me.gustavs.piggybank.TreasureActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <TextView
            android:id="@+id/hichris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:text="Hi Chris!"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="212dp" />

        <TextView
            android:id="@+id/youcurrentlyhave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:text="You Currently Have"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="273dp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:text="56.5$"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="315dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="82dp"
            android:layout_height="84dp"
            android:background="@drawable/mapbtn"
            android:text="map"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="427dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mainbackground"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="427dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="171dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/piratehat"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="2dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>