<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="me.gustavs.piggybank.TreasureActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <ImageView
            android:id="@+id/closedchest"
            android:layout_width="215dp"
            android:layout_height="200dp"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/missions" />

        <TextView
            android:id="@+id/mymissionstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:text="My Missions"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closedchest" />

        <CheckBox
            android:id="@+id/cleanmyroom"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="216dp"
            android:text="Clean my room"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <CheckBox
            android:id="@+id/takeoutthetrash"
            android:layout_width="186dp"
            android:layout_height="0dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="216dp"
            android:text="Take out the trash"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <CheckBox
            android:id="@+id/takebobbytoawalk"
            android:layout_width="222dp"
            android:layout_height="0dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="216dp"
            android:text="Take Bobby for a walk"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <CheckBox
            android:id="@+id/takebobbytoawalk2"
            android:layout_width="222dp"
            android:layout_height="0dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="216dp"
            android:text="Make dinner twice"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <TextView
            android:id="@+id/prize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="429dp"
            android:text="prize: 5$"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cleanmyroom"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <TextView
            android:id="@+id/prize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:text="prize: 2$"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cleanmyroom"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

        <TextView
            android:id="@+id/prize3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:text="prize: 8$"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cleanmyroom"
            app:layout_constraintTop_toBottomOf="@+id/mymissionstxt" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>