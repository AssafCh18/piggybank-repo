<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="me.gustavs.piggybank.GoalsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <Button
            android:id="@+id/addcoinstogoals"
            android:layout_width="128dp"
            android:layout_height="37dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginEnd="147dp"
            android:layout_marginRight="147dp"
            android:layout_marginBottom="68dp"
            android:background="@color/colorPrimary"
            android:text="add new dream"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/cashout1"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:background="@color/colorPrimary"
            android:text="cash-out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/addcoinstogoals1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/compass" />

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginEnd="159dp"
            android:layout_marginRight="159dp"
            android:text="Dreams"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/newphone"
            android:layout_width="141dp"
            android:layout_height="36dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="303dp"
            android:text="New phone"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/addcoinstogoals1"
            android:layout_width="96dp"
            android:layout_height="33dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="44dp"
            android:background="@color/colorPrimary"
            android:text="add coins"
            app:layout_constraintStart_toEndOf="@+id/newphone"
            app:layout_constraintTop_toBottomOf="@+id/goals" />

        <Button
            android:id="@+id/addcoinstogoals2"
            android:layout_width="96dp"
            android:layout_height="33dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="128dp"
            android:background="@color/colorPrimary"
            android:text="add coins"
            app:layout_constraintStart_toEndOf="@+id/newphone"
            app:layout_constraintTop_toBottomOf="@+id/goals" />

        <TextView
            android:id="@+id/newgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="56dp"
            android:text="New game"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newphone" />

        <Button
            android:id="@+id/cashout"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="392dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:background="@color/colorPrimary"
            android:text="cash-out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toEndOf="@+id/addcoinstogoals1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/howmuchleft1"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_marginStart="335dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:text="15 out of 100"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashout1" />

        <TextView
            android:id="@+id/howmuchleft"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_marginStart="335dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:text="30 out of 145"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.984"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashout1" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>